@model IEnumerable<DestisteApp.Models.ReservationModel>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-info">Appointement Dr</h2>

<form asp-action="Index" method="get">
    <p>
        <input type="search" placeholder="Enter Date or Confirmation" class="rounded" value="@ViewData["getRndvDetails"]" name="Rndvsearch" style="width:800px" />
        <input type="submit" value="Search" class="btn btn-warning" /> |
        <a asp-action="Index">Get All Appointement</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.id)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.dateTme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.operations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.id)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.dateTme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.operationid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmation)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-info" })|
                @*@Html.ActionLink("Details", "Details", new { id = item.User_id }, new { @class = "btn btn-success" }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
}
    </tbody>
</table>
